<?php

require_once dirname(__FILE__). '/og_testcase.php';

class OgPost extends OgTestCase {
  function getInfo() {
    return array('name'  => t('Og posting test'),
                 'desc'  => t('Tests to post a page to an og.'),
                 'group' => 'Organic groups');
  }
  
  function testOgPost() {
    $og_type = $this->drupalCreateContentType(array(
     	'description' => $this->randomName(32, "description ... "),
      'help' => $this->randomName(32, "description ... ")));
    
    $og_type_name = $og_type->name;
    $og_type_hn = str_replace("_", "-", $og_type_name);
    menu_rebuild();

    variable_set('og_content_type_usage_'. $og_type_name, 'group');

    // Prepare & login admin user
    $admin_user = $this->drupalCreateUser(array('administer content types', 'administer nodes', 'access content', 'create groups', "create $og_type_hn content", "edit $og_type_hn content"));
    $this->drupalLogin($admin_user);
    
    // Create & load new group 
    $gid = $this->addOg($og_type_name, OG_OPEN);
    $node = node_load($gid);
    
    // Previously, the simpletest expected the Page content type to be group-enabled.
    // Here, I'm creating a new one.
    $og_post_type = $this->drupalCreateContentType(array(
    	'description' => $this->randomName(32, "description ... "),
      'help' => $this->randomName(32, "description ... ")));

    $og_post_type_name = str_replace("_", "-", $og_post_type->name);
    menu_rebuild();
    // Set this to be a pretty much standard group post. Here it needs underscores, not hyphens
    // So I use $og_post_type->name
    variable_set('og_content_type_usage_'.$og_post_type->name, 'group_post_standard_mail');

    // Prepare & login everyman user
    $web_user = $this->drupalCreateUser(array('access content', "create $og_post_type->name content"));
    $this->drupalLogin($web_user);
    
    $url = url("og/subscribe/$gid");
    $ret = $this->drupalGet($url);
    $this->assertTrue($ret, " [browser] GET $url");
    
    $this->assertRaw(t('Are you sure you want to join the group %title?', array('%title' => $node->title)),
                            "Confirmation text found.");
    
    $this->drupalPost(NULL, array(), t('Join'));

    $this->assertNoRaw(t('Page not found'), 'page was found.');
    $this->assertRaw(t('You are now a member of the <em>@group', array('@group' => $node->title)),
                                'User subscribed to group - text not found.');
    

    // --- Post content to the recently joined group
    $edit = array();
    $title = '!SimpleTest og test node! ' . $this->randomName(10);
    $edit['title']          = $title;
    $edit['body']           = '!SimpleTest og test body! ' . $this->randomName(32) . ' ' . $this->randomName(32);
    //$edit['og_public']      = true;
    $edit['og_groups[' . $gid . ']'] = true;
    $this->drupalPost("node/add/".$og_post_type_name, $edit, t('Save'));

    // Check for success
    $this->assertRaw(t('has been created.', array ('%post' => node_get_types('name', 'page'), '%title' => $title)), 'post created');
    
    $url = url("node/$gid");
    $ret = $this->drupalGet($url);
    $this->assertTrue($ret, " [browser] GET $url");
    $this->assertText(t($edit['title']), 'Group node title found.');
    $node = node_load(array('title' => $edit['title']));
    //print_r($node);
    $this->assertNotNull($node, 'Node found in database. %s');
    
    $url = url('og/my');
    $ret = $this->drupalGet($url);
    $n = node_load($gid);
    $t = $n->title;
    $this->assertRaw($t, 'The group joined appears on the My Groups page.');

    // Create a superuser
    $super_admin_user = $this->drupalCreateUser(array('administer content types', 'administer organic groups', 'administer nodes', 'access content', 'create groups', "create $og_type_hn content", "edit $og_type_hn content"));
    // Because drupalLogout is not accessible here
    $this->drupalGet('logout'); 
    // Log in the administrator
    $this->drupalLogin($super_admin_user);
    
    // Check the admin's activity page.
    $url = url('og/activity');
    $ret = $this->drupalGet($url);
    $this->assertRaw($t, 'The new group appears on the administrators group activity page');

    node_delete($node->nid);
    node_delete($gid);
  }
}
